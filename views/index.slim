div.game-list
  div.grid data-bind="foreach: games"
    div.unit.no-gutters.one-quarter.game
      div.details
        p.heavy data-bind="text: datetime"
        p
        p vs.
        p data-bind="text: opponent"

javascript:
  $(document).ready(function(){
    function Game(data) {
      var self = this;
      self.datetime = data.date_time;
      self.opponent = data.opponent;
      self.id = data.id;
    }

    function GameViewModel() {
      var self = this;
      self.games = ko.observableArray([]);
      $.getJSON("/games", function(raw) {
          var games = $.map(raw, function(item) { return new Game(item) });
          self.games(games);
      });
    }

    ko.applyBindings(new GameViewModel());
  });
